<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> <!-- Remove <selector> wehn you are using <layer-list> -->
    <item>
        <!-- Our grey ring, 1st element of our list -->
        <shape
            android:innerRadius="48dp"
            android:shape="ring"
            android:thicknessRatio="60"
            android:useLevel="false"> <!-- Higher values, thinner line -->
            <solid android:color="#bdc3c7" />
        </shape>
    </item>

    <item>
        <!-- Our red ring, 2nd element of our list -->
        <shape
            android:innerRadius="48dp"
            android:shape="ring"
            android:thicknessRatio="60"
            android:useLevel="true">
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>
</layer-list>